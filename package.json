{
	"name": "@devprtcl/protocol",
	"version": "1.0.0",
	"description": "Securitize for Internet assets",
	"main": "cli/index.js",
	"scripts": {
		"test2": "npm run build && mocha --require ts-node/register 'test/**/*.test.ts'",
		"test": "jest",
		"pretest": "npm run build",
		"generate2": "mkdir -p build && waffle waffle-config.json && tsc --build ./tsconfig.json",
		"generate": "tsc --build ./tsconfig.json",
		"deploy": "",
		"predeploy": "npm run build",
		"lint": "npm run lint:eslint && npm run lint:solium && npm run lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:solium": "solium --dir contracts --fix",
		"lint:format": "prettier --write '**/*.{sol,js,json,md,yml}'",
		"prepack": "npm run build",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "rm -f migrations/*.js && rm -f migrations/*/*.js && npm run generate"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"jsx",
			"ts",
			"tsx",
			"node"
		],
		"transform": {
			"^.+\\.(ts)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"config": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/test/main/**/*.ts"
		]
	},
	"bin": {
		"dev-protocol": "cli/index.js"
	},
	"files": [
		"contracts",
		"migrations",
		"waffle-config.js"
	],
	"author": "aggre",
	"license": "MPL-2.0",
	"devDependencies": {
		"@types/dotenv": "8.2.0",
		"@types/jest": "^26.0.3",
		"@types/node": "13.13.12",
		"@types/shelljs": "0.8.8",
		"@typescript-eslint/eslint-plugin": "3.5.0",
		"@typescript-eslint/parser": "3.5.0",
		"bignumber.js": "9.0.0",
		"chai": "^4.2.0",
		"dotenv": "8.2.0",
		"eslint": "7.3.1",
		"eslint-config-prettier": "6.11.0",
		"eslint-config-xo": "0.31.0",
		"eslint-config-xo-typescript": "0.31.0",
		"eslint-plugin-prettier": "3.1.4",
		"ethereum-waffle": "^2.3.2",
		"ethlint": "1.2.5",
		"husky": "4.2.5",
		"prettier": "2.0.5",
		"prettier-plugin-solidity": "1.0.0-alpha.54",
		"ts-generator": "0.0.8",
		"ts-node": "8.10.2",
		"typechain": "2.0.0",
		"typescript": "3.9.5",
		"web3": "1.2.9"
	},
	"dependencies": {
		"@openzeppelin/contracts": "^2.5.0",
		"@types/chai": "^4.2.11",
		"commander": "^5.0.0",
		"jest": "^26.1.0",
		"shelljs": "^0.8.3",
		"ts-jest": "^26.1.1"
	},
	"bundleddependencies": [
		"shelljs",
		"commander",
		"dotenv",
		"ts-node"
	],
	"directories": {
		"doc": "docs",
		"test": "test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/protocol.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/protocol/issues"
	},
	"homepage": "https://github.com/dev-protocol/protocol#readme",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	}
}
